<div class="container">
   <div class="row">
     <div class="col-md-3">
      <%= flash[:notice] %>
      <h3>user info</h1>

      <div><%= image_tag @book.user.get_profile_image(80,80) %></div>

      <table class="table">
  　　<tr>
        <th>name</th>
        <td><%= @book.user.name %></td>

    　</tr>
    <tr>
      <th>body</th>
      <td><%= @book.user.introduction %></td>
    </tr>

  </table>
       <%= link_to edit_user_path(@book.user_id), class: "btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
       <h3>New book</h3>
       <%= form_with model: @bok do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_field :body %>
       <%= f.submit 'Create Book' %>
       <% end %>
     </div>
     <div class="col-md-8 offset-md-1">

       <h2>Book detail</h2>
 <table class="table table-striped">
    <tr>
         <td><%= link_to user_path(@book.user) do %>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <%= @book.user.name %>
        <% end %>
        </td>
        <td><%= link_to book_path(@book) do %>
        <%= @book.title %>
        <% end %>
        </td>
      <td><%= @book.body %></td> 
      <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete %>
          <% end %>
      </td>
       <td>
          <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book) %>
          <% end %>
      </td>
      <td>
        <p>コメント件数：<%= @book.post_comments.count %></p>
           <% @book.post_comments.each do |post_comment| %>
           <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
           <%= post_comment.user.name %>
           <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
           <% end %>
      </td>
    </tr>
  </table>
 </div>