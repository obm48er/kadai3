
<div class="container">
  <div class="row">
    <div class="col-nd-5 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
      <%= @book.errors.count %>error
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>


<%= form_with model: @book do |f| %>
  <label for="Name">Name</label>
  <%= f.text_field :title, autofocus: true, id:"title", placeholder:"名前", :class=>"form-control name" %>
  <label for="Image">ProfileImage</label>
  <%= f.text_field :body, autofocus: true, id:"body", placeholder:"introduction", :class=>"form-control name" %>
  <%= f.submit "Update Book" %>
<% end %>
<p><%= link_to "Show", "/books/#{@book.id}" %>|<%= link_to "Back", "/books" %></P>


    </div>
  </div>
</div>
