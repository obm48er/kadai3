<div class="container">
   <div class="row">
     <div class="col-md-3">
      <%= flash[:notice] %>
      <h3>User info</h1>

      <div><%= image_tag @user.get_profile_image(80,80) %></div>

      <table class="table">
  　　<tr>
        <th>name</th>
        <td><%= @user.name %></td>

    　</tr>
    <tr>
      <th>body</th>
      <td><%= @user.introduction %></td>
    </tr>

  </table>
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
       <h3>New book</h3>
       <%= form_with model: @book do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_field :body %>
       <%= f.submit 'Create Book' %>
       <% end %>
     </div>
     <div class="col-md-8 offset-md-1">

       <h2>Books</h2>
 <table class="table table-striped">
  　　<tr>
        <th></th>
        <th>title</th>
        <th>body</th>
    　</tr>

     <% @Books .each do |book| %>
    <tr>
    <td><%= link_to user_path(book.user) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
    </td>
    <td><%= link_to book_path(book) do %>
        <%= book.title %>
        <% end %>
    </td>


      <td><%= book.body %></td>
    </tr>
     <% end %>
  </table>
 </div>