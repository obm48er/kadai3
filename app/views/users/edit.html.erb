
<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h2>user info</h2>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error
      <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
      
      
<%= form_with model: @user do |f| %>
  <label for="Name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"Name", placeholder:"名前", :class=>"form-control name" %>
  <label for="Image">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", :class=>"form-control-file", accept: "image/*" %>  
  <%= f.text_field :introduction, autofocus: true, id:"introduction", placeholder:"introduction", :class=>"form-control name" %>
  <%= f.submit "Update User" %>
<% end %>


    </div>
  </div>
</div>


