<div class="container">
   <div class="row">
       <h1>Follow Users</h1>
<% if @users.exists? %>
  
    <table class="table">>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
<% @users.each do |user| %>  
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      </tbody>
    
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
</table>
</div>
</div>